<h1>Bienvenue sur The Big Project</h1>
<div class="container">
  <div class="row">
    <% @gossips.each do |gossip| %>
      <div class="col-md-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= gossip.title %></h5>
            <p class="card-text">by <%= gossip.author.first_name %></p>
            <a href="<%= gossip_path(gossip) %>" class="btn btn-primary">Voir plus</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<!-- app/views/gossips/index.html.erb -->
<h1>All Gossips</h1>

<%= link_to 'New Gossip', new_gossip_path %>

<% if flash[:success] %>
  <div class="alert alert-success">
    <%= flash[:success] %>
  </div>
<% elsif flash[:error] %>
  <div class="alert alert-danger">
    <%= flash[:error] %>
  </div>
<% end %>

<ul>
  <% @gossips.each do |gossip| %>
    <li><%= gossip.title %>: <%= gossip.content %></li>
  <% end %>
</ul>

